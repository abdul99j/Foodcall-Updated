<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.foodcall.ui.home.HomeFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorAccent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/res_img"
                android:layout_width="399dp"
                android:layout_height="101dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/mcdonalds" />

            <TextView
                android:id="@+id/res_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/res_img"
                android:layout_marginTop="10dp"
                android:text="Mcdonalds - Bahria Town"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/res_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/res_name"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:text="Free Delivery" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>

    <!--
    https://www.truiton.com/2015/03/android-cardview-example/
    link for dynamic card view.
    -->
